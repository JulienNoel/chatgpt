{
  "extends": "@tsconfig/react-native/tsconfig.json",
  "compilerOptions": {
    "strict": true,
    "noUncheckedIndexedAccess": true,
    "target": "esnext",
    "jsx": "react-native",
    "noEmit": true,
    "types": ["react-native"],
    "allowJs": true,    
    "esModuleInterop": true,
    "moduleResolution": "NodeNext"
  },
  "exclude": [
    "node_modules",
    "babel.config.js",
    "metro.config.js",    
  ]  
}
